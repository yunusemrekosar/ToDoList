@{
    ViewData["Title"] = "Home Page";
}
@model List<ToDoList.Models.Todo>
<button class="openbtn" onclick="openNav()">&#9776;</button> @*jquerye dön*@
<style>

</style>

<div class="container">
    <div class="row">
        <div class="main col-md-8">
            <div class="app-container" style="max-height:80vh" id="taskList">
                <h1 class="app-header">TO DO LIST</h1>
                <div class="add-task">
                    <input type="text" autocomplete="off" placeholder="Add New Task" class="task-input">
                    <input type="submit" value="" class="submit-task" title="Add Task">
                </div>
                <ul class="task-list">
                    @foreach (var item in Model)
                    {
                        <li class="task-list-item mb-3" data-id=" @item.Id " data-createDate=" @item.CreatedOn " data-updateDate=" @item.UpdatedOn " data-expiredDate=" @item.ExpiredOn " data-description=" @item.Description ">
                            <div class="checkbox-wrapper-39">
                                <label>
                                    @if (item.IsCompleted == true)
                                    {
                                        <input type="checkbox" checked />
                                        <span class="checkbox"></span>
                                    }
                                    else
                                    {
                                        <input type="checkbox" />
                                        <span class="checkbox"></span>
                                    }
                                </label>
                            </div>
                            @if (item.IsCompleted == true)
                            {
                                <label class="task-list-item-label done">
                                    <span contenteditable="false">@item.Title</span>
                                </label>
                            }
                            else
                            {
                                <label class="task-list-item-label">
                                    <span class="todo" contenteditable="false">@item.Title</span>
                                </label>
                            }
                            <div class="btn-container">
                                <span class="info-btn" title="İnfo Task"></span>

                                <span class="delete-btn" title="Delete Task"></span>
                            </div>
                        </li>
                    }


                </ul>
            </div>
        </div>
        <div class="details  col-md-4">
            <div class="detail-container" style=" max-height:80vh">
                <div style="display:flex; justify-content:space-between;">
                    <h1 class="app-header"> DETAIL </h1>
                    <button type="button" class="btn-close btn-close-white" aria-label="Close"></button>
                </div>
              
                <div class="mb-3">
                    <label class="mb-2 description-label">Yapılacak İş</label>
                    <label class="task-list-item">
                        <span contenteditable="false" style="color:white">55955</span>
                    </label>
                </div>
                <div class="mb-3">
                    <label class="mb-2 description-label" >Açıklama</label>
                    <textarea placeholder="Bir Açıklama Gir" class="description-input"></textarea>
                </div>
                <div style="display:flex; font-size:x-small; justify-content:space-between; margin-left:1px;">
                    <label style="width:21vh;" class="mb-2 text-white">Son Güncelleme Tarihi</label>
                    <label style="width:21vh;" class="mb-2 text-white">Bitiş Tarihi</label>
                </div>
                <div  style="display:flex; justify-content:space-between;">
                    <input id="updated" style="width:20vh;" class="datetime-picker" readonly value="2023-05-06T14:30" type="datetime-local">
                    <span style="color:white">|</span>
                    <input id="expired" class="datetime-picker" value="2023-05-06T14:30" type="datetime-local">
                </div>
            </div>
        </div>
    </div>

